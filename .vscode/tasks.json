{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "mpic++ build all cpp files",
            "command": "/usr/local/bin/mpic++",
            "args": [
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/Program.exe"
            ],
            "options": {
                "cwd": "/usr/local/bin/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}